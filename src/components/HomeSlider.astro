---
const slides = [
	{
		img: '/gallery/menu-pc.webp',
		text: 'Nuestro Menu',
		desc: 'Descubre todas nuestras burgers',
		href: '/carta',
		external: false,
	},
	{
		img: '/gallery/booking-pc.webp',
		text: 'Reserva tu Mesa',
		desc: 'Ven a disfrutar en persona',
		href: '/reserva',
		external: false,
	},
	{
		img: '/gallery/delivery-pc.webp',
		text: 'Pide a Domicilio',
		desc: 'Te lo llevamos a casa',
		href: 'https://dakburgerlacalademijas.order.app.hd.digital/menus',
		external: true,
	},
	{
		img: '/gallery/bsmash-pc.webp',
		text: 'B-Smash',
		desc: 'Estamos en Malaga con B-Smash',
		href: 'https://bsmash.es/',
		external: true,
	},
]
---

<section class='relative overflow-hidden py-16 md:py-20' data-reveal>
	<div class='absolute inset-0 -z-10 bg-gradient-to-br from-primary-50 via-white to-slate-100'></div>
	<div class='absolute -left-16 top-12 -z-10 h-64 w-64 rounded-full bg-primary/10 blur-3xl'></div>
	<div class='absolute -right-20 bottom-8 -z-10 h-72 w-72 rounded-full bg-accent/10 blur-3xl'></div>
	<div class='absolute right-10 top-10 -z-10 hidden h-32 w-32 rounded-full border border-primary/20 md:block'></div>

	<div class='page-container'>
		<div class='mb-10 text-center'>
			<p class='mt-2 text-sm font-bold uppercase tracking-[0.2em] text-accent'>Todo lo que necesitas</p>
			<h2 class='mt-3 section-heading'>Explora DAK Burger</h2>
		</div>

		<div class='grid gap-6 sm:grid-cols-2'>
			{
				slides.map((slide) => (
					<a
						href={slide.href}
						target={slide.external ? '_blank' : undefined}
						rel={slide.external ? 'noopener noreferrer' : undefined}
						class='group relative block overflow-hidden rounded-2xl'
					>
						<img
							src={slide.img}
							alt={slide.text}
							class='h-72 w-full object-cover transition-transform duration-500 group-hover:scale-110'
							loading='lazy'
						/>
						<div class='absolute inset-0 bg-gradient-to-t from-dark/90 via-dark/35 to-transparent transition-all duration-300 group-hover:from-dark/95' />
						<div class='absolute bottom-0 left-0 right-0 p-6'>
							<div class='rounded-xl bg-dark/45 p-4 backdrop-blur-[2px]'>
								<h3 class='font-heading text-2xl text-white drop-shadow-md md:text-3xl'>{slide.text}</h3>
								<p class='mt-1 text-sm text-white/80'>{slide.desc}</p>
							</div>
							<span class='mt-3 inline-flex items-center gap-1 text-sm font-semibold text-accent transition-all duration-300 group-hover:gap-2'>
								Descubrir
								<svg class='h-4 w-4' fill='none' viewBox='0 0 24 24' stroke='currentColor' stroke-width='2'>
									<path stroke-linecap='round' stroke-linejoin='round' d='M17 8l4 4m0 0l-4 4m4-4H3' />
								</svg>
							</span>
						</div>
					</a>
				))
			}
		</div>
	</div>
</section>
