---
const items = [
  'Tercera mejor burger de Espana 2024',
  'Mejor burger de Malaga 2024',
  'Segunda mejor burger de Europa 2024'
];

const loops = Array.from({ length: 4 });
---

<section class="relative overflow-hidden bg-dark py-4">
  <div class="pointer-events-none absolute inset-y-0 left-0 z-10 w-24 bg-gradient-to-r from-dark to-transparent"></div>
  <div class="pointer-events-none absolute inset-y-0 right-0 z-10 w-24 bg-gradient-to-l from-dark to-transparent"></div>

  <div class="flex whitespace-nowrap" aria-label="Reconocimientos Dak Burger">
    <div class="flex w-max animate-marquee motion-reduce:animate-none">
      {loops.map((_, loopIndex) => (
        <div class="flex shrink-0 items-center gap-12 px-6 text-sm font-bold uppercase tracking-widest text-white/90" aria-hidden={loopIndex > 0}>
          {items.map((item) => (
            <p class="flex items-center gap-2">
              <svg class="h-4 w-4 text-accent" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
              {item}
            </p>
          ))}
        </div>
      ))}
    </div>
  </div>
</section>
