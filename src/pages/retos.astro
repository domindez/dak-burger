---
import BaseLayout from '@/layouts/BaseLayout.astro'

const wallRanking = [
	{ pos: '1', name: 'Valferrer', date: '2/08/2023', time: '11:48', video: 'https://www.instagram.com/p/CvcniJRNyQI/' },
	{ pos: '2', name: 'Esttik', date: '2/08/2023', time: '12:17', video: 'https://www.youtube.com/watch?v=fyhCaStvdqM' },
	{ pos: '3', name: 'Anier', date: '28/08/2022', time: '24:43', video: 'https://www.instagram.com/reel/Chz7GZuDlvv/' },
]

const wallyRanking = [
	{ pos: '1', name: 'Esttik', date: '02/08/2023', time: '2:13', video: 'https://www.youtube.com/watch?v=J_5uuhiHFU4' },
	{
		pos: '2',
		name: 'Ricardito Fit',
		date: '02/08/2023',
		time: '7:48',
		video: 'https://www.instagram.com/reel/CvciFD_Ngrd/',
	},
	{ pos: '3', name: 'Jesus', date: '26/08/2022', time: '8:53', video: '' },
]
---

<BaseLayout title='Retos | DAK Burger'>
	<!-- Hero video -->
	<section class='relative h-[55vh] min-h-[400px] overflow-hidden pt-20'>
		<video src='/challenges.mp4' muted autoPlay loop class='h-full w-full object-cover'></video>
		<div class='absolute inset-0 bg-gradient-to-b from-dark/60 via-dark/40 to-dark/80'></div>
		<div class='absolute inset-0 flex flex-col items-center justify-center px-4 text-center'>
			<span
				class='rounded-full border border-accent/50 bg-accent/20 px-4 py-1.5 text-xs font-bold uppercase tracking-[0.2em] text-white backdrop-blur-sm'
			>
				Desafios legendarios
			</span>
			<h1 class='mt-5 font-heading text-6xl text-white drop-shadow-2xl md:text-8xl'>Nuestros Retos</h1>
			<p class='mt-3 text-lg font-light text-white/80'>Pon a prueba tu estómago</p>
		</div>
	</section>

	<!-- Challenges grid -->
	<section class='page-container -mt-16 relative z-10 grid gap-8 pb-20 md:grid-cols-2'>
		<!-- THE WALL -->
		<article class='card overflow-hidden'>
			<div class='relative'>
				<img src='/reto-wally.jpg' alt='THE WALL' class='h-64 w-full object-cover' />
				<div class='absolute inset-0 bg-gradient-to-t from-dark/50 to-transparent'></div>
				<div class='absolute bottom-4 left-4'>
					<span class='rounded-full bg-primary px-3 py-1 text-xs font-bold uppercase tracking-wider text-white'
						>Nivel extremo</span
					>
				</div>
			</div>
			<div class='p-6 space-y-4'>
				<h2 class='font-heading text-center text-5xl text-primary'>THE WALL</h2>
				<div class='flex items-center justify-center gap-3 text-sm font-semibold text-slate-600'>
					<span class='rounded-full bg-primary/10 px-3 py-1'>3 kg</span>
					<span class='rounded-full bg-primary/10 px-3 py-1'>60 min</span>
					<span class='rounded-full bg-primary/10 px-3 py-1'>65€</span>
				</div>
				<p class='text-center text-sm leading-relaxed text-slate-600'>
					Nuestro monstruo de más de 3kg de comida para estómagos preparados.
				</p>
				<div class='text-center'>
					<a href='/reserva' class='btn-primary'>QUIERO HACER THE WALL</a>
				</div>

				<div class='overflow-x-auto rounded-xl border border-slate-100'>
					<table class='w-full min-w-[480px] text-sm'>
						<thead class='bg-slate-50'>
							<tr>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Pos.</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Nombre</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Fecha</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Tiempo</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Vídeo</th>
							</tr>
						</thead>
						<tbody>
							{
								wallRanking.map((item) => (
									<tr class='border-t border-slate-50 transition-colors hover:bg-slate-50/50'>
										<td class='px-4 py-3 text-lg'>{item.pos}</td>
										<td class='px-4 py-3 font-medium text-slate-800'>{item.name}</td>
										<td class='px-4 py-3 text-slate-500'>{item.date}</td>
										<td class='px-4 py-3 font-mono font-semibold text-primary'>{item.time}</td>
										<td class='px-4 py-3'>
											{item.video && (
												<a
													class='inline-flex items-center gap-1 text-primary underline decoration-primary/30 hover:decoration-primary'
													href={item.video}
													target='_blank'
													rel='noopener noreferrer'
												>
													Ver ▶
												</a>
											)}
										</td>
									</tr>
								))
							}
						</tbody>
					</table>
				</div>
			</div>
		</article>

		<!-- WALLY -->
		<article class='card overflow-hidden'>
			<div class='relative'>
				<img src='/reto-wall.jpg' alt='WALLY' class='h-64 w-full object-cover' />
				<div class='absolute inset-0 bg-gradient-to-t from-dark/50 to-transparent'></div>
				<div class='absolute bottom-4 left-4'>
					<span class='rounded-full bg-accent px-3 py-1 text-xs font-bold uppercase tracking-wider text-white'
						>Nivel difícil</span
					>
				</div>
			</div>
			<div class='p-6 space-y-4'>
				<h2 class='font-heading text-center text-5xl text-accent'>WALLY</h2>
				<div class='flex items-center justify-center gap-3 text-sm font-semibold text-slate-600'>
					<span class='rounded-full bg-accent/10 px-3 py-1'>1 kg + milkshake</span>
					<span class='rounded-full bg-accent/10 px-3 py-1'>10 min</span>
					<span class='rounded-full bg-accent/10 px-3 py-1'>35€</span>
				</div>
				<p class='text-center text-sm leading-relaxed text-slate-600'>
					El hermano pequeño de THE WALL, duro pero más asequible.
				</p>
				<div class='text-center'>
					<a href='/reserva' class='btn-accent'>QUIERO HACER WALLY</a>
				</div>

				<div class='overflow-x-auto rounded-xl border border-slate-100'>
					<table class='w-full min-w-[480px] text-sm'>
						<thead class='bg-slate-50'>
							<tr>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Pos.</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Nombre</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Fecha</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Tiempo</th>
								<th class='px-4 py-3 text-left font-semibold text-slate-500'>Vídeo</th>
							</tr>
						</thead>
						<tbody>
							{
								wallyRanking.map((item) => (
									<tr class='border-t border-slate-50 transition-colors hover:bg-slate-50/50'>
										<td class='px-4 py-3 text-lg'>{item.pos}</td>
										<td class='px-4 py-3 font-medium text-slate-800'>{item.name}</td>
										<td class='px-4 py-3 text-slate-500'>{item.date}</td>
										<td class='px-4 py-3 font-mono font-semibold text-accent'>{item.time}</td>
										<td class='px-4 py-3'>
											{item.video && (
												<a
													class='inline-flex items-center gap-1 text-accent underline decoration-accent/30 hover:decoration-accent'
													href={item.video}
													target='_blank'
													rel='noopener noreferrer'
												>
													Ver ▶
												</a>
											)}
										</td>
									</tr>
								))
							}
						</tbody>
					</table>
				</div>
			</div>
		</article>
	</section>
</BaseLayout>
